<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_merchant_image_1"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:layout_margin="8.0dip"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_merchant_name_1"
            android:layout_width="wrap_content"
            android:layout_height="20.0dip"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray_text"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_merchant_distance_1"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:gravity="center"
            android:textColor="#ffff05b0"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_merchant_image_2"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:layout_margin="8.0dip"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_merchant_name_2"
            android:layout_width="wrap_content"
            android:layout_height="20.0dip"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray_text"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_merchant_distance_2"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:gravity="center"
            android:textColor="#ffff05b0"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_merchant_image_3"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:layout_margin="8.0dip"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_merchant_name_3"
            android:layout_width="wrap_content"
            android:layout_height="20.0dip"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray_text"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_merchant_distance_3"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:gravity="center"
            android:textColor="#ffff05b0"
            android:textSize="14.0sp" />
    </LinearLayout>
</LinearLayout>