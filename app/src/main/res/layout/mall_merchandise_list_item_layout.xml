<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100.0dip"
    android:paddingLeft="8.0dip"
    android:paddingRight="8.0dip">

    <ImageView
        android:id="@+id/iv_merchantdies_icon"
        android:layout_width="120.0dip"
        android:layout_height="88.0dip"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="88.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18.0dip"
        android:layout_toRightOf="@id/iv_merchantdies_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_merchantdies_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/tab_text_color"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/tv_merchantdies_comment"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:lineSpacingExtra="0.0dip"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/light_gray"
            android:textSize="@dimen/middle_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.fxft.cheyoufuwu.common.view.SpanableTextView
                android:id="@+id/tv_merchantdies_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_10dp"
                android:gravity="center_vertical"
                android:textColor="#ffff6633"
                android:textSize="18.0sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginRight="@dimen/padding_10dp"
                android:background="@color/light_gray" />

            <com.fxft.cheyoufuwu.common.view.SpanableTextView
                android:id="@+id/tv_merchantdies_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#ffff6633"
                android:textSize="18.0sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="99.0dip"
        android:background="@color/home_gray_line" />
</RelativeLayout>