<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/iv_merchandise_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/wb_default_photo"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_merchandise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/black"
        android:text="加油卡2000元"
        android:layout_marginBottom="5dp"
        />
    
    <TextView
        android:id="@+id/tv_merchandise_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/middle_text_size"
        android:layout_marginBottom="5dp"
        android:text="江苏"
        android:textColor="@color/light_gray" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/check_dash_line"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <com.fxft.cheyoufuwu.common.view.SpanableTextView
            android:id="@+id/tv_merchandise_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@color/home_gray_line"/>

        <com.fxft.cheyoufuwu.common.view.SpanableTextView
            android:id="@+id/tv_merchandise_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>




</LinearLayout>