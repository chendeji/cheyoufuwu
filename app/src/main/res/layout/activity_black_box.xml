<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hxz_form_top_bg"
            android:orientation="vertical"
            android:paddingBottom="15.0dip">

            <com.fxft.cheyoufuwu.common.view.CommonTopBar
                android:id="@+id/ctb_black_box_top_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:left_bg="@drawable/go_arrow_left"
                app:left_layout_enable="true"
                app:title_enable="true"
                app:title_text="@string/car_listence_number"
                app:title_text_color="@color/white"
                app:title_text_size="@dimen/middle_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textSize="@dimen/default_text_size"
                        android:text="@string/drive_mileage"
                        android:textColor="@color/white"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textSize="@dimen/default_text_size"
                        android:text="@string/drive_hource"
                        android:textColor="@color/white"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textSize="@dimen/default_text_size"
                        android:text="@string/lastday_mileage"
                        android:textColor="@color/white"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textSize="@dimen/default_text_size"
                        android:text="@string/lastday_score_times"
                        android:textColor="@color/white"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textSize="@dimen/default_text_size"
                        android:text="@string/last_day_break_time"
                        android:textColor="@color/white"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_position" />

                    <TextView
                        android:background="@drawable/car_position_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/default_text_size"
                        android:textColor="@color/white"
                        android:text="@string/car_position"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:gravity="center"
                android:stretchColumns="0,1,2">

                <TableRow android:layout_height="130.0dip">

                    <LinearLayout
                        android:id="@+id/ll_car_check"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <ImageView
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:src="@drawable/hxz_icon_carcheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:text="@string/car_check"
                            android:textColor="@color/gray_text"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_health_record"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <ImageView
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:src="@drawable/hxz_icon_healthrecords" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:text="@string/health_record"
                            android:textColor="@color/gray_text"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_drive_record"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <ImageView
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:src="@drawable/hxz_icon_drivedaily" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:text="@string/drive_report"
                            android:textColor="@color/gray_text"
                            android:textSize="16.0sp" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_height="130.0dip">

                    <LinearLayout
                        android:id="@+id/ll_last_time_score"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <ImageView
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:src="@drawable/hxz_icon_drivescore" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:text="@string/lasttime_schedule"
                            android:textColor="@color/gray_text"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_car_guard"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <ImageView
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:src="@drawable/hxz_icon_carguard" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:text="@string/car_bodyguard"
                            android:textColor="@color/gray_text"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_master_help"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <ImageView
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:src="@drawable/hxz_icon_masterhelp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:text="@string/master_help"
                            android:textColor="@color/gray_text"
                            android:textSize="16.0sp" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_height="130.0dip">

                    <LinearLayout
                        android:id="@+id/ll_maintain_notice"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <ImageView
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:src="@drawable/hxz_icon_currentcar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:text="@string/check_notice"
                            android:textColor="@color/gray_text"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_safe_friend"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <ImageView
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:src="@drawable/hxz_icon_safefriends" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:text="@string/safe_friend"
                            android:textColor="@color/gray_text"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_free_check"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <ImageView
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:src="@drawable/hxz_icon_freecheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:text="@string/free_check"
                            android:textColor="@color/gray_text"
                            android:textSize="16.0sp" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
