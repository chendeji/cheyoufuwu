<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CommonSearchLayout">
        <attr name="left_image" format="reference" />
        <attr name="cancel_image" format="reference" />
        <attr name="edit_text_hint" format="reference|string" />
        <attr name="edit_text_size" format="reference|dimension" />
        <attr name="edit_text_hint_color" format="color|reference"/>
        <attr name="edit_text_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="AutoHorizontalLinearLayout">
        <attr name="space" format="dimension|integer" />
    </declare-styleable>

    <declare-styleable name="SlideShowView">
        <attr name="auto_scroll_enable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CursorView">
        <attr name="cursor_count" format="reference|integer" />
    </declare-styleable>

    <declare-styleable name="MenuItemView">
        <attr name="menu_top_drawable" format="reference"/>
        <attr name="menu_item_title" format="string|reference"/>
        <attr name="menu_title_text_size" format="reference|dimension"/>
        <attr name="menu_title_text_color" format="color|reference"/>
        <attr name="menu_item_detail" format="string|reference"/>
        <attr name="menu_detail_text_size" format="reference|dimension"/>
        <attr name="menu_detail_text_color" format="color|reference"/>
        <attr name="menu_detail_text_enable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CommonTopBar">
        <attr name="title_text" format="string|reference" />
        <attr name="title_enable" format="boolean" />
        <attr name="title_text_size" format="reference|dimension" />
        <attr name="title_text_color" format="color|reference" />

        <attr name="middle_custom_layout_enable" format="boolean" />
        <attr name="middle_custom_layout" format="reference" />

        <attr name="left_bg" format="reference" />
        <attr name="left_layout_enable" format="boolean" />
        <attr name="left_custom_layout" format="reference" />

        <attr name="right_bg1" format="reference" />
        <attr name="right_bg2" format="reference" />
        <attr name="right_bg3" format="reference" />
        <attr name="right_first_layout_enable" format="boolean" />
        <attr name="right_sec_layout_enable" format="boolean" />
        <attr name="right_thir_layout_enable" format="boolean" />
        <attr name="right_first_layout" format="reference" />
        <attr name="right_sec_layout" format="reference" />
        <attr name="right_thir_layout" format="reference" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color|reference"/>
        <attr name="border_overlay" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SideBar">
        <attr name="defualt_background" format="reference|color"/>
        <attr name="pressed_background" format="reference|color"/>
    </declare-styleable>
</resources>